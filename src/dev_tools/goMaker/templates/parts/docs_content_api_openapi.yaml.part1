  /{{.Route}}:
    get:
      tags:
        - {{.Group}}
      summary: {{.Endpoint.Summary}}
      description: {{.Description}}
      operationId: {{.LowerGroup}}-{{.Route}}
      parameters:
        - name: .ParamName
          in: query
          description: .ParamDescription
          required: true
          schema:
            type: string
      responses:
        "200":
          description: returns the requested data
          content:
            application/json:
              schema:
                properties:
                  data:
                    description: [{PRODUCES}]
                    type: object
                    properties:
                      .DataName:
                        type: string
                example:
        "400":
          description: bad input parameter
